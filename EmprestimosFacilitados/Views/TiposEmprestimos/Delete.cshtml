@model EmprestimosFacilitados.Models.TipoEmprestimo

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Tipo de Empréstimo</h1>


<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Quantidade de Parcelas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeMeses)
        </dd>
        <dt class = "col-sm-2">
            Juros (%)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Juros)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <h4>Tem certeza que deseja excluir?</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TipoEmprestimoId" />
        <input type="submit" value="Sim, excluir tipo de empréstimo" class="btn btn-danger" /> 
        <a asp-action="Index"><button type="button" class="btn btn-secondary">Não,  retornar para a lista </button></a>
    </form>
</div>
