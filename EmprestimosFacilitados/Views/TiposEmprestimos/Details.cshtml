@model EmprestimosFacilitados.Models.TipoEmprestimo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes - Tipo de emprestimo</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Quantidade de Parcelas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeMeses)
        </dd>
        <dt class = "col-sm-2">
            Juros (%)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Juros)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
     <a asp-action="Edit" asp-route-id="@Model?.TipoEmprestimoId"><button type="button" class="btn btn-success">Editar</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Voltar</button></a>
</div>
