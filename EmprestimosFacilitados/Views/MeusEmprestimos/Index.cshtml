@model IEnumerable<EmprestimosFacilitados.Models.MeuEmprestimo>

@{
    ViewData["Title"] = "Empréstimos";
}

<h1>Empréstimos</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary">Novo Empréstimo</button></a>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Sobrenome)
            </th>
            <th>
                Valor Total
            </th>
            <th>
                Tipo de Empréstimo
            </th>
            <th>
                Parcelas pagas
            </th>
            <th>
                Parcelas a pagar
            </th>
            <th>
                Quitado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotalQueSerapago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEmprestimo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdParcelasPagas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEmprestimo.QuantidadeMeses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmprestimoQuitado)
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.MeuEmprestimoId" ><button type="button" class="btn btn-success">Editar </button></a>
                <a asp-action="Details" asp-route-id="@item.MeuEmprestimoId"><button type="button" class="btn btn-secondary">Detalhes</button></a> 
                <a asp-action="Delete" asp-route-id="@item.MeuEmprestimoId"> <button type="button" class="btn btn-danger">Deletar</button></a>
                <a asp-action="PagarParcela" asp-route-id="@item.MeuEmprestimoId"><button type="button" class="btn btn-warning">Pagar Parcela</button></a>
                    
            </td>
        </tr>
}
    </tbody>
</table>