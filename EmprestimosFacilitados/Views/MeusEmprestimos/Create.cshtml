@model EmprestimosFacilitados.Models.MeuEmprestimo

@{
    ViewData["Title"] = "Novo Emprestimo";
}

<h1>Novo Emprestimo</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Cliente</label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorEmprestado" class="control-label"></label>
                <input asp-for="ValorEmprestado" class="form-control" />
                <span asp-validation-for="ValorEmprestado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEmprestimoId" class="control-label">Tipo Empréstimo</label>
                <select asp-for="TipoEmprestimoId" class ="form-control" asp-items="ViewBag.TipoEmprestimoId"></select>
            </div>
            <br >
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index"><button type="button" class="btn btn-secondary">Voltar</button></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
